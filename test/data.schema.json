{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configuration",
  "type": "object",
  "properties": {
    "church_name": {
      "description": "The Church's name",
      "type": "string"
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "file": {
            "type": "string"
          }
        },
        "required": ["title", "file"],
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "required": ["church_name"],
  "additionalProperties": false
}
